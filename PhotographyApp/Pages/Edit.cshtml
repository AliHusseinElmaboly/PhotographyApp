@page
@model EditModel
@{
    ViewData["Title"] = "Edit Photo";
}

<h1>Edit Photo</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="Photo.Id"></label>
        <input asp-for="Photo.Id" class="form-control" readonly/>
        <span asp-validation-for="Photo.Id" class="text-danger"></span>

    </div>

    <div class="form-group">
        <label asp-for="Photo.Title"></label>
        <input asp-for="Photo.Title" class="form-control" />
        <span asp-validation-for="Photo.Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Photo.Description"></label>
        <textarea asp-for="Photo.Description" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Photo.FilePath"></label>
        <input asp-for="Photo.FilePath" class="form-control" />
        <span asp-validation-for="Photo.FilePath" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>
