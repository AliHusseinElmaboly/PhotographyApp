@page
@model DeleteModel
@{
    ViewData["Title"] = "Delete Photo";
}

<h1>Delete Photo</h1>

<div>
    <h4>Are you sure you want to delete this photo?</h4>
    <div>
        <h3>@Model.Photo.Title</h3>
        <p>@Model.Photo.Description</p>
    </div>
    <form method="post">
        <input type="hidden" asp-for="PhotoId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
